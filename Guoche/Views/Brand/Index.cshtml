@using Entity.ViewModel;
@using Common;
@{
    ViewBag.Title = "品牌信息";
    List<BrandEntity> brands = (List<BrandEntity>)ViewBag.Brands;
}
<div class="row-fluid">
    <h2 class="heading" style="margin-top:20px">品牌信息</h2>
</div>
<div class="row-fluid">
    <div class="widget widget-padding span12">
        <div class="widget-header">
            <i class="icon-laptop"></i>
            <h5>品牌信息</h5>
            <div class="widget-buttons">
                <a href="/Brand/Edit"><i class="icon-laptop"></i> 新增</a>
            </div>
        </div>
        <div class="widget-body" style="margin-bottom:50px">
            <div id="menus_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row-fluid">
                    <div class="span6">
                        <form action="/Brand/Index" method="get">
                            <div class="dataTables_length" id="menus_filter">
                                <label>品牌名称: <input type="text" aria-controls="menus" id="name" name="name" value="@ViewBag.Name"></label>
                                <label>
                                    品牌状态: <select class="span3" style="width:80px" id="status" name="status">
                                        <option value="-1" @(ViewBag.Status == -1 ? "selected" : "")>全部</option>
                                        <option value="1" @(ViewBag.Status == 1 ? "selected" : "")>可用</option>
                                        <option value="0" @(ViewBag.Status == 0 ? "selected" : "")>不可用</option>
                                    </select>
                                </label>
                                <button class="btn btn-info" type="submit">搜索</button>
                            </div>
                        </form>
                    </div>
                </div>
                @if (brands != null && brands.Count > 0)
                {
                    <table id="users" class="table table-striped table-bordered dataTable" aria-describedby="users_info">
                        <thead>
                            <tr role="row">
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">品牌名称</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">英文名称</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 300px;">品牌描述</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 40px;">状态</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 40px;">操作</th>
                            </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                            @for (int i = 0; i < brands.Count; i++)
                            {

                                <tr class=@(i%2==0?"odd":"even")>
                                    <td class=" sorting_1">@brands[i].BrandName</td>
                                    <td class=" ">@brands[i].BrandNameEN</td>
                                    <td class=" ">@brands[i].Description</td>
                                    <td class=" ">
                                        @if (brands[i].IsUse == 0)
                                        {
                                            <span class="label">不可用</span>
                                        }
                                        else
                                        {
                                            <span class="label label-success">可用</span>
                                        }

                                    </td>
                                    <td class=" ">
                                        <div class="btn-group">
                                            <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                                                操作
                                                <span class="caret"></span>
                                            </a>
                                            <ul class="dropdown-menu pull-right">
                                                <li><a href="/Brand/Edit?bid=@brands[i].BrandID"><i class="icon-edit"></i> 编辑</a></li>
                                                <li><a href="/Brand/Remove?bid=@brands[i].BrandID"><i class="icon-trash"></i> 删除</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
            </div> <!-- /widget-body -->
        </div> <!-- /widget -->
    </div>
</div>

