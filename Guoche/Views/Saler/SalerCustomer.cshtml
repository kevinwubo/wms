@using Entity.ViewModel;
@using Common;
@{
    ViewBag.Title = "业务员关联客户";
    List<SalerRelationEntity> salers = (List<SalerRelationEntity>)ViewBag.SalerCustomer;
    PagerInfo p = (PagerInfo)ViewBag.Pager;
}

<div class="row-fluid">
    <h2 class="heading" style="margin-top:20px">业务员关联客户</h2>
</div>
<div class="row-fluid">
    <div class="widget widget-padding span12">
        <div class="widget-header">
            <i class="icon-laptop"></i>
            <h5>业务员关联客户</h5>
        </div>
        <div class="widget-body" style="margin-bottom:50px">
            <div id="menus_wrapper" class="dataTables_wrapper form-inline" role="grid">
                @if (salers != null && salers.Count > 0)
                {
                    <table id="users" class="table table-striped table-bordered dataTable" aria-describedby="users_info">
                        <thead>
                            <tr role="row">
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">编号</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 120px;">客户编号</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">客户姓名</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">客户手机号</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1">销售编码</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 40px;">状态</th>
                                <th role="columnheader" tabindex="0" rowspan="1" colspan="1" style="width: 40px;">操作</th>
                            </tr>
                        </thead>

                        <tbody role="alert" aria-live="polite" aria-relevant="all">
                            @for (int i = 0; i < salers.Count; i++)
                            {

                                <tr class=@(i%2==0?"odd":"even")>
                                    <td class=" sorting_1">@i</td>
                                    <td class=" ">@salers[i].CustomerID</td>
                                    <td class=" ">@salers[i].customer.CustomerName</td>
                                    <td class=" ">@salers[i].customer.Mobile</td>
                                    <td class=" ">@salers[i].SalerCode</td>
                                    <td class=" ">
                                        @if (salers[i].Status == 0)
                                        {
                                            <span class="label">不可用</span>
                                        }
                                        else
                                        {
                                            <span class="label label-success">可用</span>
                                        }

                                    </td>
                                    <td class=" ">
                                       
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                }
                @{ Html.RenderPartial("../Pager", p); }
            </div>
        </div> <!-- /widget-body -->
    </div> <!-- /widget -->
</div>