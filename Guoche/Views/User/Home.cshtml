@using Common
@using Entity.ViewModel;
@{
    ViewBag.Title = "订单录入";
    List<OrderStatisticsEntity> orderStatisicsList = (List<OrderStatisticsEntity>)ViewBag.orderStatisicsList;

}
@section Header{
    <link href="~/source/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
    <style>
        .picRemove {
            height: 15px;
            width: 15px;
            background-color: #e4e5e6;
            position: absolute;
            margin-top: 15px;
            /*filter: alpha(opacity:70);
            opacity: 0.7;
            -moz-opacity: 0.7;
            -khtml-opacity: 0.7;*/
        }
    </style>

}
<div class="row-fluid">
    <form class="form-horizontal" id="priceSetForm" action="/Order/Modify" method="post">
        <div class="widget widget-padding span12">
            <div class="widget-header" style="margin-top:30px">
                <i class="icon-list-alt"></i><h5>首页</h5>
            </div>
            <div class="widget-body" style="text-align: center; height: 400px; margin: 0 auto;">
                <table id="users" class="table table-striped table-bordered dataTable" aria-describedby="users_info">
                    <thead>
                        <tr role="row">
                            <th role="columnheader" tabindex="0" rowspan="1" colspan="1">客户账户</th>
                            <th role="columnheader" tabindex="0" rowspan="1" colspan="1">录单数量</th>
                            <th role="columnheader" tabindex="0" rowspan="1" colspan="1">录单时间</th>

                        </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                        @if (orderStatisicsList != null && orderStatisicsList.Count > 0)
                        {
                            foreach (OrderStatisticsEntity entity in orderStatisicsList)
                            {
                                <tr>
                                    <td class=" sorting_1">@entity.key</td>
                                    <td class=" sorting_1">@entity.count</td>
                                    <td class=" sorting_1">@DateTime.Now.ToShortDateString()</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>

</div>
@section Footer{
    <script type="text/javascript" src="~/source/bootstrap-fileinput/js/fileinput.js"></script>
    <script type="text/javascript" src="~/source/bootstrap-fileinput/js/fileinput_locale_zh.js"></script>
}